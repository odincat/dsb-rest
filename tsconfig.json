{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "src/",
    "target": "es2017",
    "skipLibCheck": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "#api/*": [
        "src/api/*"
      ],
      "#data/*" : [
        "src/data/*"
      ],
      "#src/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
  ],
  "lib": ["es2022"]
}